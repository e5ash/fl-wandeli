				.contacts__list(class='animate__animated animate__fadeInLeft wow')
					.contacts__item
						.contacts__icon
							img(src="_/uploads/phone.svg" alt="")
						.contacts__text
							p #[a(href="tel:+78007070435") 8 800 707 04 35]
							p #[a(href="tel:+78126034995") 8 812 603 49 95]
					.contacts__item
						.contacts__icon
							img(src="_/uploads/email.svg" alt="")
						.contacts__text
							p #[a(href="mailto:sale@fortezzo.com") sale@fortezzo.com]
					.contacts__item
						.contacts__icon
							img(src="_/uploads/placeholder.svg" alt="")
						.contacts__text
							p г. Санкт-Петербург, ул. Митрофаньевское шоссе, д.29, БЦ "Радуга", офис 107.
				.contacts__content(class='animate__animated animate__fadeInRight wow')

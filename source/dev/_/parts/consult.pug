.consult
	.case
		.consult__title.h1 #[strong Заказать консультацию]
		.consult__wrap.row
			.consult__item.consult__input.input.--b-white.--white.--required
				.input__title Ваше имя
				.input__wrap
					input.input__area(type="text" name="name")

			.consult__item.consult__input.input.--b-white.--white.--phone.--required
				.input__title Ваш номер телефона
				.input__wrap
					input.input__area(type="tel" name="phone" placeholder="900 100 10 00")

			.consult__item.consult__input.input.--b-white.--white.--required
				.input__title Ваша электронная почта
				.input__wrap
					input.input__area(type="text" name="email")

			.consult__item.consult__textarea.textarea.--b-white.--white
					.textarea__title Комментарий
					.textarea__wrap
						textarea.textarea__area(name="comment")

			button.consult__item.consult__btn.btn.--md.--bg-white Получить консультацию